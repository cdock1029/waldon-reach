{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "allowJs": false,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    ".cache",
    "tmp",
    "functions",
    "**/__tests__/*"
  ],
  "include": ["app"]
}
