{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src",

    "allowJs": true,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "baseUrl": ".",

    /* "typeRoots": ["./node_modules/@firebase"],
    "types": ["app-types", "auth-types", "firestore-types"]
    */
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".cache", "tmp"]
}
